<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/buttonTrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonResults"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/buttonResults"
            android:layout_marginTop="62dp"
            android:text="Train" />

        <Button
            android:id="@+id/buttonProcedure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonTrain"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:text="Procedure" />

        <Button
            android:id="@+id/buttonResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonProcedure"
            android:layout_alignRight="@+id/buttonProcedure"
            android:layout_below="@+id/buttonTrain"
            android:layout_marginTop="50dp"
            android:text="Results" />

    </RelativeLayout>

</LinearLayout>